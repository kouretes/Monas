<?xml version="1.0" ?>
<!-- Modules to be loaded  -->

<!-- ThreadFrequency in Hz
     StatsCycle=n every n repetitions the agent will log statistics
-->
<agent IsRealTime=1 Priority=1 ThreadFrequency=100 StatsCycle=1000>
  <name>KSensors</name>
  <activity>Sensors</activity>

  <activity>LedHandler</activity>
</agent>

<agent IsRealTime=1 Priority=1 ThreadFrequency=30 StatsCycle=100>
  <name>KMC</name>
   <activity>MotionController</activity>
  <activity>RobotController</activity>
</agent>
<agent IsRealTime=1 Priority=1 ThreadFrequency=15 StatsCycle=50>
  <name>KVision</name>
  
  <activity>Vision</activity>
  <activity>Behavior</activity>
  
</agent>
