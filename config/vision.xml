<?xml version="1.0" ?>
<!-- Show Segmented image using opencv -->
<cvHighgui>0</cvHighgui>
<!--  Configuration files for Segmentation-->
<SegmentationBottom>5-KouretesLab-segall.conf</SegmentationBottom>
<SegmentationTop>5-KouretesLab-segall.conf</SegmentationTop>
<Dfov>53.85</Dfov>
<!-- Ball Detection -->
<ballsize>0.065</ballsize>
<balltolerance>0.15</balltolerance>
<!--  Real World distance parameters -->
<skipdistance>0.1</skipdistance>
<seedistance>7.2</seedistance>
<!-- Image Scanning parameters -->
<scanV>32</scanV>
<scanH>32</scanH>
<minH>8</minH>
<!--<scanstep>23</scanstep>-->
<bordersize>12</bordersize>
<pixeltol>5</pixeltol>
<subsampling>5</subsampling>
<!-- For obstacle avoidance -->
<obstacledistance>1</obstacledistance>
<!--- Goal posts --->
<goalheight>0.79</goalheight>
<goaldist>1.4</goaldist>
<goaldiam>0.098</goaldiam>
<goalslopetolerance>0.2</goalslopetolerance>
<widthestimateotolerance>0.4</widthestimateotolerance>
<!-- How many ms does it take the sensor module to publish a message? -->
<sensordelay>1</sensordelay>

<pitchoffset>0.0565</pitchoffset>
