<?xml version="1.0" ?>
<!-- Show Segmented image using opencv -->
<cvHighgui>0</cvHighgui>
<!--  Configuration files for Segmentation-->
<SegmentationBottom>2-Robocup2010-segall.conf</SegmentationBottom>
<SegmentationTop>2-Robocup2010-segall.conf</SegmentationTop>
<Dfov>58></Dfov>
<!-- Ball Detection -->
<ballsize>0.06</ballsize>
<balltolerance>0.20</balltolerance>
<!--  Real World distance parameters -->
<skipdistance>0.03</skipdistance>
<seedistance>7</seedistance>
<!-- Image Scanning parameters -->
<scanstep>2</scanstep>
<borderskip>2</borderskip>
<!-- For obstacle avoidance -->
<obstacledistance>1</obstacledistance>
