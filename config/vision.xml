<?xml version="1.0" ?>
<!-- Show Segmented image using opencv -->
<cvHighgui>0</cvHighgui>
<!--  Configuration files for Segmentation-->
<SegmentationBottom>5-KouretesLab-segall.conf</SegmentationBottom>
<SegmentationTop>5-KouretesLab-segall.conf</SegmentationTop>
<Dfov>58></Dfov>
<!-- Ball Detection -->
<ballsize>0.065</ballsize>
<balltolerance>0.28</balltolerance>
<!--  Real World distance parameters -->
<skipdistance>0.1</skipdistance>
<seedistance>8</seedistance>
<!-- Image Scanning parameters -->
<scanstep>7</scanstep>
<borderskip>2</borderskip>
<!-- For obstacle avoidance -->
<obstacledistance>1</obstacledistance>
<!-- How many ms does it take the sensor module to publish a message? -->
<sensordelay>35</sensordelay>
